import { useState, useEffect } from "react";
import { getProductsById } from "../../asyncMock";

const ItemDetailContainer = () => {
  const [product, setProduct] = useState(null);

  useEffect(() => {
    getProductsById("1")
      .then((response) => {
        setProduct(response);
      })
      .catch((error) => {
        console.error(error);
      });
  }, []);
};

export default ItemDetailContainer;
